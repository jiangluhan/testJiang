<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.selectKey.dao.testSelectKeyDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMapAuto" type="com.selectKey.po.testSelectKeyAutoPo">
        <id column="id" property="id"/>
        <result column="username" property="userName"/>
    </resultMap>

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMapUuid" type="com.selectKey.po.testSelectKeyUuidPo">
        <id column="id" property="id"/>
        <result column="username" property="userName"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, username
    </sql>

    <!-- 测selectKey标签的作用，当主键为自增时 -->
    <insert id="testSelectKeyAuto" parameterType="com.selectKey.po.testSelectKeyAutoPo">
        <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Integer">
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into user_auto (username) values (#{userName,jdbcType=VARCHAR})
    </insert>

    <!-- 测selectKey标签的作用，当主键为UUID时 -->
    <insert id="testSelectKeyUuid" parameterType="com.selectKey.po.testSelectKeyUuidPo">
        <selectKey keyProperty="id" order="BEFORE" resultType="java.lang.String">
            SELECT uuid()
        </selectKey>
        insert into user_uuid
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null || id != '' ">
                id,
            </if>
            <if test="userName != null || userName != '' ">
                username,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null || id != '' ">
                #{id,jdbcType=VARCHAR},
            </if>
            <if test="userName != null || userName != '' ">
                #{userName,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>
</mapper>
